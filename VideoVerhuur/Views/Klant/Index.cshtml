@model VideoVerhuur.Models.Klanten

@{
    ViewData["Title"] = "Welkom";
}@{
    ViewData["Title"] = "Welkom";
    var genres = ViewBag.Genres as IEnumerable<VideoVerhuur.Models.Genres>;
}
<img src="~/images/videoVerhuur.jpg" alt="Logo" width="200" />
<h2>Welkom, @Model.Naam!</h2>

<h3>Kies een genre</h3>
@if (genres != null && genres.Any())
{
    <ul class="list-unstyled" style="display: flex; flex-wrap: wrap; gap: 10px;">
        @foreach (var genre in genres)
        {
            <li style="list-style-type: none;">
                <a asp-controller="Klant" asp-action="Genre" asp-route-genreId="@genre.GenreId" class="btn btn-outline-primary">
                @genre.GenreNaam
            </a>
            </li>
        }
    </ul>
}

<a asp-action="Index" class="btn btn-primary">Terug naar Home</a>

